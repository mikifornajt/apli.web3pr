@page
@model KsiázkiNWD.Pages.BookFormModel
@{
    ViewData["Title"] = "Dodaj książkę (POST)";
}

<h2>Dodaj książkę – metoda POST</h2>

@if (Model.Message != null)
{
    <div class="alert alert-success">@Model.Message</div>
}

<form method="post">
    <div class="mb-3">
        <label>Autor</label>
        <input type="text" class="form-control" name="Author" required />
    </div>

    <div class="mb-3">
        <label>Tytuł książki</label>
        <input type="text" class="form-control" name="Title" required />
    </div>

    <div class="mb-3">
        <label>Rok wydania</label>
        <input type="number" class="form-control" name="Year" required />
    </div>

    <div class="mb-3">
        <label>Gatunek</label>
        <select class="form-select" name="Genre" required>
            <option value="">-- wybierz --</option>
            <option>Fantastyka</option>
            <option>Kryminał</option>
            <option>Romans</option>
            <option>Horror</option>
            <option>Biografia</option>
            <option>Historyczna</option>
            <option>Inne</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Wyślij POST</button>
</form>